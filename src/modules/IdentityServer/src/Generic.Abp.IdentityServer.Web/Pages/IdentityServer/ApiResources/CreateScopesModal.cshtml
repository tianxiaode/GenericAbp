@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.IdentityServer.Localization
@model Generic.Abp.IdentityServer.Web.Pages.IdentityServer.ApiResources.CreateScopesModalModel
@inject IHtmlLocalizer<AbpIdentityServerResource> _l
@{
    Layout = null;
}
<form method="post" asp-page="/IdentityServer/ApiResources/CreateScopesModal">
    <abp-modal>
        <abp-modal-header title="@_l["Scopes"].Value"></abp-modal-header>
        <abp-modal-body>
            @* TODO: Can we use dynamic form? *@
            <input type="hidden" asp-for="ApiResourceScope.ApiResourceId" />
            <abp-input asp-for="ApiResourceScope.Name" label="@_l["Scopes"].Value"></abp-input>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>



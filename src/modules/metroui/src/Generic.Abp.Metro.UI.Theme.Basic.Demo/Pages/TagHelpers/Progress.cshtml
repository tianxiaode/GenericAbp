@page
@using Generic.Abp.Metro.UI.Theme.Basic.Demo.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model Generic.Abp.Demo.Web.Pages.TagHelpers.ProgressModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<MetroUiThemeBasicDemoResource> L
@{
    Layout = "~/Pages/TagHelpers/Layout.cshtml";
    var text = L["Progress"].Value;
    PageLayout.Content.Title = text;
}
<div data-role="panel" class="h-100 w-100 scroll-y" data-title-caption="@text" data-cls-title="bg-dark fg-white  h4 m-0">
    <div class="w-100 p-2 border-1 bd-gray border-solid">
        <metro-progress value="20"/>
        <metro-progress value="20" small="true" class="mt-2" />
        <metro-progress value="20" show-value="true" class="mt-2" />
        <metro-progress value="20" show-value="true" value-position="Center" class="mt-2" />
        <metro-progress value="20" show-label="true" class="mt-2" />
        <metro-progress value="20" show-label="true" label-template="%VAL% uploaded!" label-position="After" class="mt-2" />
        <metro-progress value="20" buffer="40" type="Buffer" class="mt-2" />
        <metro-progress value="20" type="Load" class="mt-2" />
        <metro-progress value="20" type="Load" buffer="40" class="mt-2" />
        <metro-progress value="20" type="Line" class="mt-2" />
        <metro-progress value="20" cls-bar="bg-cyan" cls-back="bg-yellow" class="mt-2" />
    </div>
    <div class=" p-2 bg-grayWhite">
        <div class="code">
            &lt;metro-progress value="20"/&gt;
            &lt;metro-progress value="20" small="true" class="mt-2" /&gt;
            &lt;metro-progress value="20" show-value="true" class="mt-2" /&gt;
            &lt;metro-progress value="20" show-value="true" value-position="Center" class="mt-2" /&gt;
            &lt;metro-progress value="20" show-label="true" class="mt-2" /&gt;
            &lt;metro-progress value="20" show-label="true" label-template="%VAL% uploaded!" label-position="After" class="mt-2" /&gt;
            &lt;metro-progress value="20" buffer="40" type="Buffer" class="mt-2" /&gt;
            &lt;metro-progress value="20" type="Load" class="mt-2" /&gt;
            &lt;metro-progress value="20" type="Load" buffer="40" class="mt-2" /&gt;
            &lt;metro-progress value="20" type="Line" class="mt-2" /&gt;
            &lt;metro-progress value="20" cls-bar="bg-cyan" cls-back="bg-yellow" class="mt-2" /&gt;
        </div>
    </div>

</div>
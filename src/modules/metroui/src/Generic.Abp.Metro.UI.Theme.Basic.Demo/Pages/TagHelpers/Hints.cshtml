@page "/tag-helpers/hints"
@using Generic.Abp.Metro.UI.Theme.Basic.Demo.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model Generic.Abp.Demo.Web.Pages.TagHelpers.HintsModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<MetroUiThemeBasicDemoResource> L
@{
    Layout = "~/Pages/TagHelpers/Layout.cshtml";
    var text = L["Hits"].Value;
    PageLayout.Content.Title = text;
}
<div data-role="panel" class="h-100 w-100 scroll-y" data-title-caption="@text" data-cls-title="bg-dark fg-white  h4 m-0">
    <div class="row w-100 p-2 border-1 bd-gray border-solid">
        <metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" accent-color="Primary" />
        <metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" hint-position="Bottom" accent-color="Secondary" />
        <metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" hint-position="Left" accent-color="Success" />
        <metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" hint-position="Right" cls-hint="bg-cyan fg-white drop-shadow"  accent-color="Info" />
    </div>
    <div class=" p-2 bg-grayWhite">
        <div class="code">
            &lt;metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" color="Primary" /&gt;
            &lt;metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" hint-position="Bottom" color="Secondary" /&gt;
            &lt;metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" hint-position="Left" color="Success" /&gt;
            &lt;metro-button class="mr-1" button-style="Hint" text="Hint" hint-text="Hint" hint-position="Right" hint-cls="bg-cyan fg-white drop-shadow"  color="Info" /&gt;
        </div>
    </div>

</div>
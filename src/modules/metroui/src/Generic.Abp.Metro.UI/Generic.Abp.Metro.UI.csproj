<Project Sdk="Microsoft.NET.Sdk.Razor">

  <Import Project="..\..\..\..\common.props" />

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <AssemblyName>Generic.Abp.Metro.UI</AssemblyName>
    <PackageId>Generic.Abp.Metro.UI</PackageId>
    <IsPackable>true</IsPackable>
    <OutputType>Library</OutputType>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <RootNamespace />
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Generic\Abp\Metro\UI\TagHelpers\Dropdown\**" />
    <Compile Remove="Generic\Abp\Metro\UI\TagHelpers\Form\**" />
    <Content Remove="Generic\Abp\Metro\UI\TagHelpers\Dropdown\**" />
    <Content Remove="Generic\Abp\Metro\UI\TagHelpers\Form\**" />
    <EmbeddedResource Remove="Generic\Abp\Metro\UI\TagHelpers\Dropdown\**" />
    <EmbeddedResource Remove="Generic\Abp\Metro\UI\TagHelpers\Form\**" />
    <None Remove="Generic\Abp\Metro\UI\TagHelpers\Dropdown\**" />
    <None Remove="Generic\Abp\Metro\UI\TagHelpers\Form\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.AspNetCore.Mvc.UI" Version="$(AbpVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Panel\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Badge\" />
  </ItemGroup>

</Project>

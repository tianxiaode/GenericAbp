<Project Sdk="Microsoft.NET.Sdk.Razor">

  <Import Project="..\..\..\..\common.props" />

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <AssemblyName>Generic.Abp.Metro.UI</AssemblyName>
    <PackageId>Generic.Abp.Metro.UI</PackageId>
    <IsPackable>true</IsPackable>
    <OutputType>Library</OutputType>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <RootNamespace />
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Generic\Abp\Metro\UI\Localization\cs.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\en.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\pl-PL.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\pt-BR.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\sl.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\tr.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\vi.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\zh-Hans.json" />
    <Content Remove="Generic\Abp\Metro\UI\Localization\zh-Hant.json" />
  </ItemGroup>


  <ItemGroup>
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\cs.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\en.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\pl-PL.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\pt-BR.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\sl.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\tr.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\vi.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\zh-Hans.json" />
    <EmbeddedResource Include="Generic\Abp\Metro\UI\Localization\zh-Hant.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.AspNetCore.Mvc.UI" Version="$(AbpVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Panel\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Badge\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Figure\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Card\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Border\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Collapse\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Accordion\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\SideNav\" />
    <Folder Include="Generic\Abp\Metro\UI\TagHelpers\Progress\" />
  </ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk.Razor">
  <Import Project="..\..\..\..\common.props" />

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>Generic.Abp.Metro.UI.Bundling</AssemblyName>
    <PackageId>Generic.Abp.Metro.UI.Bundling</PackageId>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <IsPackable>true</IsPackable>
    <OutputType>Library</OutputType>
    <RootNamespace />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.AspNetCore.Mvc.UI.Bundling.Abstractions" Version="$(AbpVersion)" />
    <PackageReference Include="Volo.Abp.Minify" Version="$(AbpVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Generic.Abp.Metro.UI\Generic.Abp.Metro.UI.csproj" />
  </ItemGroup>

</Project>
